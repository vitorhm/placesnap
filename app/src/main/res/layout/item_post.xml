<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/teste2"
                android:id="@+id/imageview_post_userpicture"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textview_post_username"
                android:layout_toRightOf="@id/imageview_post_userpicture"
                android:layout_toEndOf="@id/imageview_post_userpicture"
                android:layout_alignTop="@id/imageview_post_userpicture"
                android:layout_alignBottom="@id/imageview_post_userpicture"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"
                android:text="Vitor Henrique"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview_post_description"
                android:layout_below="@id/imageview_post_userpicture"
                android:gravity="center_vertical"
                android:text="de ontem!"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/teste1"
                android:id="@+id/imageview_post_image"
                android:layout_below="@id/textview_post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/imageview_post_crown"
                android:src="@drawable/ic_crown"
                android:layout_below="@id/imageview_post_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_toLeftOf="@id/imageview_post_crown"
                android:layout_toStartOf="@id/imageview_post_crown"
                android:layout_alignTop="@id/imageview_post_crown"
                android:layout_alignBottom="@id/imageview_post_crown"
                android:paddingTop="3dp"
                android:gravity="center_vertical"
                android:text="2.548"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>